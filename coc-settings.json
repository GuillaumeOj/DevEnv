{
  // Python
  "python.venvFolders": [".cache/pytpoetry/virtualenvs", ".pyenv", "venv"],
  "python.jediEnabled": false,
  "python.autoComplete.showAdvancedMembers": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "90"],
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length", "90"],
  "python.analysis.diagnosticEnabled": false,
  // HTML
  "html.autoClosingTags": true,
  "html.format.enable": true,
  // General settings
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "json",
    "html",
    "css",
    "scss",
    "js",
    "htmldjango"
  ],
  "coc.preferences.formatOnType": true,
  // JavaScript
  "javascript.format.enabled": true,
  "javascript.showUnused": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true
}
